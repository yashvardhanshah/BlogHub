<!-- Contact Section -->
<section class="py-5" id="contact">
  <div class="container">
    <div class="row">
      <div class="col-lg-6 mb-4 mb-lg-0">
        <h2 class="fw-bold mb-4">Get in Touch</h2>
        <p class="mb-4">Have questions or suggestions? Feel free to contact us. We'd love to hear from you!</p>
        
        <div class="mb-4">
          <div class="d-flex align-items-center mb-3">
            <div class="icon-circle bg-primary text-white rounded-circle me-3 d-flex align-items-center justify-content-center" style="width:40px;height:40px">
              <i class="fas fa-map-marker-alt"></i>
            </div>
            <div>
              <h5 class="mb-0">Address</h5>
              <p class="mb-0 text-muted">123 Blog Street, Digital City</p>
            </div>
          </div>
          
          <div class="d-flex align-items-center mb-3">
            <div class="icon-circle bg-primary text-white rounded-circle me-3 d-flex align-items-center justify-content-center" style="width:40px;height:40px">
              <i class="fas fa-envelope"></i>
            </div>
            <div>
              <h5 class="mb-0">Email</h5>
              <p class="mb-0 text-muted">contact@bloghub.com</p>
            </div>
          </div>
          
          <div class="d-flex align-items-center">
            <div class="icon-circle bg-primary text-white rounded-circle me-3 d-flex align-items-center justify-content-center" style="width:40px;height:40px">
              <i class="fas fa-phone"></i>
            </div>
            <div>
              <h5 class="mb-0">Phone</h5>
              <p class="mb-0 text-muted">+1 (555) 123-4567</p>
            </div>
          </div>
        </div>
      </div>
      
      <div class="col-lg-6">
        <div class="card border-0 shadow-sm">
          <div class="card-body p-4">
            <h3 class="fw-bold mb-4">Send a Message</h3>
            <form action="/contact" method="POST">
              <div class="mb-3">
                <label for="name" class="form-label">Your Name</label>
                <input type="text" class="form-control" id="name" name="name" required>
              </div>
              <div class="mb-3">
                <label for="email" class="form-label">Your Email</label>
                <input type="email" class="form-control" id="email" name="email" required>
              </div>
              <div class="mb-3">
                <label for="subject" class="form-label">Subject</label>
                <input type="text" class="form-control" id="subject" name="subject" required>
              </div>
              <div class="mb-3">
                <label for="message" class="form-label">Message</label>
                <textarea class="form-control" id="message" name="message" rows="4" required></textarea>
              </div>
              <button type="submit" class="btn btn-primary btn-lg w-100">Send Message</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

