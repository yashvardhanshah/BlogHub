<!-- Featured Blogs Section -->
<section class="py-5 bg-light">
  <div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2 class="fw-bold">Featured Blogs</h2>
      <a href="/blogs" class="btn btn-primary">View All</a>
    </div>

    <% if(featuredBlogs && featuredBlogs.length > 0) { %>
      <div class="row g-4">
        <% featuredBlogs.forEach(blog => { %>
          <div class="col-md-6 col-lg-3">
            <div class="card h-100 border-0 shadow-sm hover-scale transition-all">
              <img src="/img/uploads/<%= blog.image %>" class="card-img-top" alt="<%= blog.title %>" style="height: 180px; object-fit: cover;">
              <div class="card-body">
                <div class="d-flex justify-content-between mb-2">
                  <span class="badge bg-primary px-3 py-2 rounded-pill"><%= blog.category %></span>
                  <small class="text-muted"><i class="far fa-clock me-1"></i> <%= new Date(blog.date).toLocaleDateString() %></small>
                </div>
                <h5 class="card-title"><%= blog.title %></h5>
                <p class="card-text text-muted"><%= blog.content.substring(0, 80) %>...</p>
              </div>
              <div class="card-footer bg-transparent border-0 d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center">
                  <img src="/img/uploads/<%= blog.author.avatar %>" class="rounded-circle me-2" width="30" height="30" alt="<%= blog.author.name %>">
                  <small><%= blog.author.name %></small>
                </div>
                <div>
                  <small class="text-muted me-2"><i class="far fa-eye"></i> <%= blog.views %></small>
                  <small class="text-muted"><i class="far fa-heart"></i> <%= blog.likesCount %></small>
                </div>
              </div>
              <a href="/blogs/<%= blog._id %>" class="stretched-link"></a>
            </div>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <div class="alert alert-info">No featured blogs available at the moment.</div>
    <% } %>
  </div>
</section>

